
@{
    ViewBag.Title = "ViewProductionActions";
}
@Scripts.Render("~/bundles/jquery")
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        $("#btnAddProductionActions").on("click", function () {

            var ProductionActions = {

                description: $("#description").val()
            }
            showSpinner();
            $.ajax({

                type: "POST",
                url: "addProductionActions",
                data: ProductionActions,
                beforeSend: function () {
                    showSpinner();
                },
                error: function (error) {
                    hideSpinner();
                    swal("Error.", "Ocurrió un error en el proceso.", "error");
                },
                success: function (msg) {
                    refreshRpt();
                    hideSpinner();
                    swal("¡Éxito!", "La acción fue creada exitosamente.", "success");
                }
            });
        });

        $("#btnEditProductionActions").on("click", function () {

            var ProductionActions = {

                id: $("#editProductionActionsId").val(),
                description: $("#editDescription").val()
            }
            showSpinner();
            $.ajax({

                type: "POST",
                url: "updateProductionActions",
                data: ProductionActions,
                beforeSend: function () {
                    showSpinner();
                },
                error: function (error) {
                    hideSpinner();
                    swal("Error.", "Ocurrió un error en el proceso.", "error");
                },
                success: function (msg) {
                    refreshRpt();
                    hideSpinner();
                    swal("¡Éxito!", "La marca fue actualizada exitosamente.", "success");
                }
            });
        });

        $("#btnDeleteProductionActions").on("click", function () {

            var ProductionActions = {

                id: $("#deleteProductionActions").val()

            }
            showSpinner();
            $.ajax({

                type: "POST",
                url: "deleteProductionActions",
                data: ProductionActions,
                beforeSend: function () {
                    showSpinner();
                },
                error: function (error) {
                    hideSpinner();
                    swal("Error.", "Ocurrió un error en el proceso.", "error");
                },
                success: function (msg) {
                    refreshRpt();
                    hideSpinner();
                    swal("¡Éxito!", "La Acción fue eliminada exitosamente.", "success");
                }
            });
        });

    });

</script>
<script type="text/javascript">
    function callEditProductionActionsModal(Id, Description) {

        $("#editProductionActionsId").val(Id);
        $("#editDescription").val(Description);

        $('#editProductionActionsModal').modal('toggle');

    }

    function callDeleteProductionActionsModal(Id) {

        $("#deleteProductionActionsId").val(Id);
        $('#deleteProductionActionsModal').modal('toggle');

    }

    function refreshRpt() {

        $.ajax({

            type: "GET",
            url: "rptProductionActions",
            beforeSend: function () {
            },
            error: function (error) {
                swal("Error.", "Ocurrió un error en la actualización del reporte.", "error");
            },
            success: function (partialView) {
                $("#rptProductionActionsTable").html(partialView);
                $("#rptProductionActionsTable").show();
            }
        });

    } 
</script>
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Catálogo de Acciones</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a>Catálogos</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Catálogo de Acciones</li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>

    <!-- Striped rows start -->
    <div class="spinner-grow loading text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>

    <div class="row" >
        <div class="col-12">
            <div class="card">

                <div class="card-content">
                    <div class="card-body">

                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addProductionActionsModal">
                            Agregar Accion de Producciont4a 
                        </button>
                        <!-- table striped -->
                        <div class="table-responsive" id="rptProductionActionsTable">
                            @Html.Partial("_ViewProductionActionsPartial", (List<ProyectoBase.Models.ProductionActionsModel>)ViewBag.ProductionActionsCatalog);
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Striped rows end -->

    <div class="modal fade text-left" id="addProductionActionsModal" tabindex="-1" aria-labelledby="myModalLabel33" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel33">Agregar Accion de Produccion</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <form action="#" id="formAddProductionActions">
                    <div class="modal-body">
                        <label>Descripción: </label>
                        <div class="form-group">
                            <input type="text" id="description" placeholder="Descripción" class="form-control">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Cerrar</span>
                        </button>
                        <button type="button" class="btn btn-primary ml-1" id="btnAddProductionActions" data-dismiss="modal">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Guardar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @*MODAL DE EDICION*@
    <div class="modal fade text-left" id="editProductionActionsModal" tabindex="-1" aria-labelledby="myModalLabel33" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel33">Editar Accion </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <form action="#" id="formEditProductionActions">
                    <div class="modal-body">
                        <label>Descripción: </label>
                        <div class="form-group">
                            <input type="text" id="editDescription" placeholder="Descripción" class="form-control">
                        </div>

                        <input id="editProductionActionsId" name="editProductionActionsId" type="hidden">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Cerrar</span>
                        </button>
                        <button type="button" class="btn btn-primary ml-1" id="btnEditProductionActions" data-dismiss="modal">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Guardar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @*MODAL DE ELIMINAR*@
    <div class="modal fade text-left" id="deleteProductionActionsModal" tabindex="-1" aria-labelledby="myModalLabel33" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel33">Eliminar Accion </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <form action="#" id="formDeleteProductionActions">
                    <div class="modal-body">
                        <label>¿Seguro que desea eliminar la Accion?</label>
                        <input id="deleteProductionActionsId" name="deleteProductionActionsId" type="hidden">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Cancelar</span>
                        </button>
                        <button type="button" class="btn btn-primary ml-1" id="btnDeleteProductionActions" data-dismiss="modal">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Confirmar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
