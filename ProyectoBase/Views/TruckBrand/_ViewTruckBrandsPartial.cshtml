@model List<ProyectoBase.Models.TruckBrandModel>


    <table class="table table-striped mb-0">
        <thead>
            <tr>
                <th> Marca </th>
                <th> Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-bold-500"> @Html.DisplayFor(modelItem => item.description)</td>
                    <td>
                        <input type="button" class="btn btn-primary btn-sm rounded" value="Editar" onclick="callEditTruckBrandModal(@item.id, '@item.description', '@item.type', '@item.preffix')"> |
                        <input type="button" class="btn btn-primary btn-sm rounded" value="Eliminar" onclick="callDeleteTruckBrandModal(@item.id)" />

                    </td>
                </tr>
            }
        </tbody>
    </table>

