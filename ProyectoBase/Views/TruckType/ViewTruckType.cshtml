@{
    ViewBag.Title = "ViewTruckType";
}
@Scripts.Render("~/bundles/jquery")
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        $("#btnAddTruckType").on("click", function () {

            var TruckType = {

                Description: $("#Description").val(),
                Preffix: $("#Preffix").val(),
                Cancel: $("#Cancel").val()
            }
            showSpinner();
            $.ajax({

                type: "POST",
                url: "addTruckType",
                data: TruckType,
                beforeSend: function () {
                    showSpinner();
                },
                error: function (error) {
                    hideSpinner();
                    swal("Error.", "Ocurrió un error en el proceso.", "error");
                },
                success: function (msg) {
                    refreshRpt();
                    hideSpinner();
                    swal("¡Éxito!", "El tipo de camión fue creado exitosamente.", "success");
                }
            });
        });

        $("#btnEditTruckType").on("click", function () {

            var TruckType = {

                Id: $("#editTruckTypeId").val(),
                Description: $("#editDescription").val(),
                Preffix: $("#editPreffix").val()

            }
            showSpinner();
            $.ajax({

                type: "POST",
                url: "updateTruckType",
                data: TruckType,
                beforeSend: function () {
                    showSpinner();
                },
                error: function (error) {
                    hideSpinner();
                    swal("Error.", "Ocurrió un error en el proceso.", "error");
                },
                success: function (msg) {
                    refreshRpt();
                    hideSpinner();
                    swal("¡Éxito!", "El tipo de camión fue actualizado exitosamente.", "success");
                }
            });
        });

        $("#btnDeleteTruckType").on("click", function () {

            var TruckType = {

                Id: $("#deleteTruckTypeId").val()

            }
            showSpinner();
            $.ajax({

                type: "POST",
                url: "deleteTruckType",
                data: TruckType,
                beforeSend: function () {
                    showSpinner();
                },
                error: function (error) {
                    hideSpinner();
                    swal("Error.", "Ocurrió un error en el proceso.", "error");
                },
                success: function (msg) {
                    refreshRpt();
                    hideSpinner();
                    swal("¡Éxito!", "El tipo de camión fue eliminado exitosamente.", "success");
                }
            });
        });

    });

</script>
<script type="text/javascript">
    function callEditTruckTypeModal(Id, Description, Preffix) {

        $("#editTruckTypeId").val(Id);
        $("#editDescription").val(Description);
        $("#editPreffix").val(Preffix);

        $('#editTruckTypeModal').modal('toggle');

    }

    function callDeleteTruckTypeModal(Id) {

        $("#deleteTruckTypeId").val(Id);
        $('#deleteTruckTypeModal').modal('toggle');

    }

    function refreshRpt() {

        $.ajax({

            type: "GET",
            url: "rptTruckType",
            beforeSend: function () {
            },
            error: function (error) {
                swal("Error.", "Ocurrió un error en la actualización del reporte.", "error");
            },
            success: function (partialView) {
                $("#rptTruckTypeTable").html(partialView);
                $("#rptTruckTypeTable").show();
            }
        });

    }
</script>
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Catálogo de Tipos de Camión</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Catálogos</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Catálogo de Tipos de Camión</li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>

    <!-- Striped rows start -->
    <div class="spinner-grow loading text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-content">
                    <div class="card-body">

                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addTruckTypeModal">
                            Agregar Tipo de Camión
                        </button>
                        <!-- table striped -->
                        <div class="table-responsive" id="rptTruckTypeTable">
                            @Html.Partial("_ViewTruckTypePartial", (List<ProyectoBase.Models.TruckTypeModel>)ViewBag.TruckTypeCatalog);
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Striped rows end -->

    <div class="modal fade text-left" id="addTruckTypeModal" tabindex="-1" aria-labelledby="myModalLabel33" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel33">Agregar Tipo de Camión </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <form action="#" id="formAddTruckType">
                    <div class="modal-body">
                        <label>Descripción: </label>
                        <div class="form-group">
                            <input type="text" id="Description" placeholder="Descripción" class="form-control">
                        </div>
                        <label>Prefijo: </label>
                        <div class="form-group">
                            <input type="text" id="Preffix" placeholder="Prefijo" class="form-control">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Cerrar</span>
                        </button>
                        <button type="button" class="btn btn-primary ml-1" id="btnAddTruckType" data-dismiss="modal">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Guardar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @*MODAL DE EDICION*@
    <div class="modal fade text-left" id="editTruckTypeModal" tabindex="-1" aria-labelledby="myModalLabel33" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel33">Editar Tipo de Camión </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <form action="#" Id="formEditTruckType">
                    <div class="modal-body">
                        <label>Descripción: </label>
                        <div class="form-group">
                            <input type="text" Id="editDescription" placeholder="Descripción" class="form-control">
                        </div>
                        <label>Prefijo: </label>
                        <div class="form-group">
                            <input type="text" Id="editPreffix" placeholder="Prefijo" class="form-control">
                        </div>
                        <input Id="editTruckTypeId" name="editTruckTypeId" type="hidden">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Cerrar</span>
                        </button>
                        <button type="button" class="btn btn-primary ml-1" Id="btnEditTruckType" data-dismiss="modal">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Guardar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @*MODAL DE ELIMINAR*@
    <div class="modal fade text-left" id="deleteTruckTypeModal" tabindex="-1" aria-labelledby="myModalLabel33" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel33">Eliminar Tipo de Camión</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <form action="#" id="formDeleteTruckType">
                    <div class="modal-body">
                        <label>¿Seguro que desea eliminar el tipo de camión?</label>
                        <input id="deleteTruckTypeId" name="deleteTruckTypelId" type="hidden">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                            <i class="bx bx-x d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Cancelar</span>
                        </button>
                        <button type="button" class="btn btn-primary ml-1" id="btnDeleteTruckType" data-dismiss="modal">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Confirmar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
